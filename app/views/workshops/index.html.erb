  <% if @workshops.empty? %>
    <div class="no-result">
        <h1>Aucun résultat</h1>
        <h2>Essayez de lancer une recherche avec d'autres mots-clés.</h2>
    </div>
  <% else %>
<div class="workshops-index-container">
    <div class="workshops-index-cards">
      <% @workshops.each do |workshop| %>
        <%= link_to workshop_path(workshop), id: "workshops-index-card" do %>
        <div class="workshops-index-card">
          <div class="img-workshops-index-card">
            <% if workshop.photos.attached? %>
              <%= cl_image_tag workshop.photos[0].key, alt: "Jeu de Mains", class: "img-workshops-index-card", width: 300, crop: :fill %>
            <% else %>
              <%= image_tag "https://cdn.shopify.com/s/files/1/0135/6627/9738/articles/header_310b8395-f711-42cb-89f9-db495e34012f.jpg?v=1540918920", alt: "image workshop", class: "img-workshops-index-card", width: 300, crop: :fill %>
            <% end %>
          </div>
          <div class="workshops-index-card-infos">
            <div>
              <h1><%= workshop.name[0..30] %></h1>
            </div>
            <div class="d-flex justify-content-between mb-1">
              <h2><i class="fas fa-map-marker-alt"></i> <%= workshop.place.name %></h2>
            </div>
            <div class="d-flex justify-content-between">
              <div class=" rating d-flex">
                <h3>
                  <i class="fas fa-star" style="color:$blue"></i><%= workshop.average_rating %>/5
                </h3>
                <p>(<%= workshop.reviews.count %> avis)</p>
              </div>
              <h1><%= humanized_money_with_symbol(workshop.price) %></h1>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
    <div id="workshops-index-map"
         style="width: 40%;
         height: 100vh;
         position: sticky;
         top: 0;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key=<%= ENV['MAP_API_KEY'] %>>
    </div>
</div>
  <% end %>
