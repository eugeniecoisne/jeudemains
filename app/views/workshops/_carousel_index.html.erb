<div id="indexCarouselPlantes_<%= workshop.id %>" class="carousel slide" data-ride="carousel" data-interval="500000000">
  <div class="carousel-inner">
    <% if workshop.photos.attached? %>
      <div class="carousel-item active">
        <%= cl_image_tag workshop.photos[0].key, alt: "Jeu de Mains", width: 300, crop: :fill %>
      </div>
      <div class="carousel-item">
        <%= cl_image_tag workshop.photos[1].key, alt: "Jeu de Mains", width: 300, crop: :fill %>
      </div>
      <div class="carousel-item">
        <%= cl_image_tag workshop.photos[2].key, alt: "Jeu de Mains", width: 300, crop: :fill %>
      </div>
    <% else %>

        <div class="carousel-item link-workshop active">
        <%= link_to(workshop) do  %>
          <%= image_tag "https://images.unsplash.com/photo-1557677514-666eb39d6d23?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=967&q=80", alt: "Jeu de Mains" %>
        <% end  %>
        </div>
        <div class="carousel-item link-workshop">
        <%= link_to(workshop) do  %>
          <%= image_tag "https://images.unsplash.com/photo-1452860606245-08befc0ff44b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", alt: "Jeu de Mains"%>
        <% end  %>
        </div>
        <div class="carousel-item link-workshop">
        <%= link_to(workshop) do  %>
          <%= image_tag "https://images.unsplash.com/photo-1536236155319-1edab471917c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1051&q=80", alt: "Jeu de Mains"%>
        <% end  %>
        </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#indexCarouselPlantes_<%= workshop.id %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#indexCarouselPlantes_<%= workshop.id %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
