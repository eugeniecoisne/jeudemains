<div class="container-big">
  <div class="col-12">
      <h2 class="show-card-name"><%= @workshop.name %></h2>
      <p class="show-card-organizer">Organisé par: <%= @workshop.profile.first_name %> <%= @workshop.profile.last_name %></p>
      <p class="show-card-animator">Animé par: <%= @workshop.place.profile.first_name %> <%= @workshop.place.profile.last_name %> </p>
    <div class="d-flex justify-content-between">
      <div>
        <p class="show-card-address"><%= @workshop.place.address %></p>
        <p class="show-card-duration"><%= @workshop.duration %> minutes</p>
      </div>
      <div class="price-workshop">
        <p class="btn btn-dark"><%= @workshop.price %>€</p>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <div id="showCarouselPlantes" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#showCarouselPlantes" data-slide-to="0" class="active"></li>
        <li data-target="#showCarouselPlantes" data-slide-to="1"></li>
        <li data-target="#showCarouselPlantes" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag "logo-black.png", alt: "Jeu de Mains", width: 440 %>
          </div>
          <div class="carousel-item">
            <%= image_tag "logo-blue.png", alt: "Jeu de Mains", width: 440 %>
          </div>
          <div class="carousel-item">
            <%= image_tag "logo-green.png", alt: "Jeu de Mains", width: 440 %>
          </div>
      </div>
        <a class="carousel-control-prev" href="#showCarouselPlantes" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#showCarouselPlantes" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="card show-card place-booking-card">
      <h3>Book this place !</h3>
        <%= simple_form_for([@workshop, @booking]) do |f| %>
          <div class="form-group select required">
            <label class="select required" for="date_id">Date <abbr title="required">*</abbr></label>
            <select class="form-control select required" name="date" id="date_id">
              <% @workshop.workshop_dates.sort_by { |date| date.date }.each do |date| %>
                <option value="<%= date.id %>"><%= date.date.strftime('%d/%m/%Y - %H : %M') %></option>
              <% end %>
            </select>
          </div>
          <div class="form-group select required">
            <select class="form-control select required" name="nb_part" id="workshop_level">
              <% (1..@workshop.participants - @workshop.bookings.count).to_a.each do |nb| %>
                <option value="<%= nb %>"><%= nb %></option>
              <% end %>
            </select>
          </div>
          <%= f.submit 'Book', class: 'btn w-50' %>
        <% end %>
        <form class="input">
          <input type="text" id="fname" name="fname" placeholder="AJOUTER AU PANIER">
          <input type="text" id="lname" name="lname" placeholder="FAIRE UNE CARTE CADEAU">
        </form>
    </div>
  </div>

  <div class="further-information m-3">
    <h2>Programme de l'atelier</h2>
      <p><%= @workshop.description %></p>
    <h2>Avis sur l'atelier</h2>
      <p>Note: </p>
    <div class="workshop-reviews-card d-flex mb-3">
      <div class="row">
        <div class="card show-card col-6">
          <p><strong><%= @workshop.description.first(300) %></strong></p>
        </div>
        <div class="card show-card col-6">
          <p><strong><%= @workshop.description.first(300) %></strong></p>
        </div>
        <div class="card show-card col-6">
          <p><strong><%= @workshop.description.first(300) %></strong></p>
        </div>
        <div class="card show-card col-6">
          <p><strong><%= @workshop.description.first(300) %></strong></p>
        </div>
      </div>
    </div>
