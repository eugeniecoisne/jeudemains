<div class="form-background", style="background-image: url(<%= image_path "background-form.svg" %>);">
  <div class="container pt-4">
    <div class="row justify-content-center">
      <div class="col-10 col-sm-6 col-lg-4 title-form">

        <h3>Se connecter</h3>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        label: "Mot de passe",
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Se connecter", class: "button btn-blue" %>
          </div>
        <% end %>
        <div class="mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
