<div class="form-background", style="background-image: url(<%= image_path "background-form.svg" %>);">
  <div class="container mt-3 edit-profile-form">
    <div class="row justify-content-center">
      <div class="col-8">
        <%= simple_form_for(@profile) do |f| %>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.input :last_name, label: false, placeholder: 'Nom' %>
            </div>
            <div class="form-group col-md-6">
              <%= f.input :first_name, label: false, placeholder: 'Prénom' %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <fieldset class="form-group check_boxes optional profile_animator form-group-valid">
                <input type="hidden" name="profile[animator][]" value="" />
                <div class="form-check">
                  <input class="form-check-input is-valid check_boxes optional" type="checkbox" value="true" name="profile[animator][]" id="profile_animator_true" />
                  <label class="form-check-label collection_check_boxes" for="profile_animator_true">Je souhaite être animateur</label>
                </div>
              </fieldset>
            </div>
            <div class="form-group col-md-6">
              <fieldset class="form-group check_boxes optional profile_organizer form-group-valid">
                <input type="hidden" name="profile[organizer][]" value="" />
                <div class="form-check">
                  <input class="form-check-input is-valid check_boxes optional" type="checkbox" value="true" name="profile[organizer][]" id="profile_organizer_true" />
                  <label class="form-check-label collection_check_boxes" for="profile_organizer_true">Je souhaite être organisateur</label>
                </div>
              </fieldset>
            </div>
          </div>

          <%= f.input :company, label: false, placeholder: 'Société' %>
          <div class="row">
            <div class="form-group col-md-4">
              <%= f.input :address, label: false, placeholder: 'Numéro + Rue' %>
            </div>
            <div class="form-group col-md-4">
              <%= f.input :zip_code, label: false, placeholder: 'Code postal' %>
            </div>
            <div class="form-group col-md-4">
              <%= f.input :city, label: false, placeholder: 'Ville' %>
            </div>
          </div>
          <%= f.input :phone_number, label: false, placeholder: 'Téléphone' %>
          <%= f.input :site_web, label: false, placeholder: 'Site web' %>
          <%= f.input :facebook, label: false, placeholder: 'Page Facebook' %>
          <%= f.input :instagram, label: false, placeholder: 'Page Instagram' %>
          <%= f.input :photo, as: :file, label: 'Photo de profil' %>
          <%= f.submit 'Valider', class: 'btn btn-outline-primary' %>
          <%= link_to 'Annuler', profile_path(@profile), class: 'btn btn-outline-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
