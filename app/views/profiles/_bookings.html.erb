<!-- LEFT SIDE -->

  <div class="py-4 d-flex justify-content-center">
    <div class="card profile-show-card">

      <!-- AVATAR -->

      <div class="card-header profile-show-card-header">
        <% if @profile.photo.attached? %>
          <%= cl_image_tag @profile.photo.key, alt: "profile picture", id: "avatar", width: 250, crop: :fill  %>
        <% else %>
          <%= image_tag "profile-picture.png", id: "avatar", width: 250, crop: :fill %>
        <% end %>
      </div>

      <!-- BODY -->

      <div class="card-body profile-show-card-body">
        <div class="d-flex">
          <i class="fas fa-calendar-alt" id="check-icon"></i>
          <div class="button btn-white">
            <p><strong><%= @profile.bookings.count %> </strong> réservation(s)</p>
          </div>
        </div>
        <div class="d-flex">
          <i class="fas fa-user" id="check-icon"></i>
          <div class="button btn-white">
            <p>Membre depuis <strong><%= @profile.created_at.year %></strong></p>
          </div>
        </div>
      </div>
    </div>
  </div>


<!-- RIGHT SIDE -->

  <div class="public-show-col-right">

    <!-- MY BOOKINGS -->

    <h4><strong>Mes réservations</strong></h4>
    <div class="public-show-my-places">
      <% @profile.bookings.sort_by { |booking| booking.date }.reverse.each do |booking| %>

        <!-- ONE BOOKING -->
        <div class="card pb-4">
          <div class="public-show-place-name">
            <h5><%=booking.workshop.name%></h5>
            <div>
              <% if booking.date < Date.today %>
                  <%= link_to "Quelle note donnez-vous à cet atelier ?", new_workshop_review_path(booking.workshop), class: "button btn-green", id: "invite-to-comment" %>
              <% end %>
              <% if booking.date > Date.today %>
                <%= link_to workshop_path(booking.workshop) do %>
                  <i class="fas fa-eye"></i>
                <% end %>
                <%= link_to booking_path(booking), method: :delete, data: { confirm: 'Confirmez-vous la suppression ?' } do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              <% end %>
            </div>
          </div>

          <% if booking.date > Date.today %>
            <div class="d-flex">
              <div class="button btn-blue" id="booking-date-information">
                <span><%= booking.date.strftime('%d/%m/%Y') %></span>
              </div>
              <div class="button btn-yellow ml-2" id="booking-date-information">
                <span>chez <%= booking.workshop.place.name %></span>
              </div>
            </div>
          <% else %>
            <div class="d-flex">
              <div class="button btn-green" id="booking-date-information-gray">
                <span><%= booking.date.strftime('%d/%m/%Y') %></span>
              </div>
              <div class="button btn-green ml-2" id="booking-date-information-gray">
                <span>chez <%= booking.workshop.place.name %></span>
              </div>
            </div>

          <% end %>
        </div>
      <% end %>
    </div>

  </div>
